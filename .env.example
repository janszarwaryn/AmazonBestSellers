# Database (use: openssl rand -base64 32)
DB_ROOT_PASSWORD=your_root_password_here
DB_HOST=localhost
DB_PORT=3306
DB_NAME=AmazonBestSellersDb
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here

# JWT (use: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here
JWT_ISSUER=AmazonBestSellersAPI
JWT_AUDIENCE=AmazonBestSellersClient
JWT_EXPIRE_MINUTES=60

# RapidAPI (get from: rapidapi.com)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=real-time-amazon-data.p.rapidapi.com
RAPIDAPI_BASE_URL=https://real-time-amazon-data.p.rapidapi.com

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200

# Admin
ADMIN_USERNAME=your_admin_username_here
ADMIN_PASSWORD=your_admin_password_here

# Logging
LOG_PATH=logs/log-.txt
