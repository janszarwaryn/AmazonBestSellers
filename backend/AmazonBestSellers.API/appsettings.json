{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=AmazonBestSellersDb;User=amazonuser;Password=amazonpass123;"
  },
  "Jwt": {
    "Secret": "CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_MIN_32_CHARS_LONG",
    "Issuer": "AmazonBestSellersAPI",
    "Audience": "AmazonBestSellersClient",
    "ExpireMinutes": "60"
  },
  "RapidAPI": {
    "Key": "YOUR_RAPIDAPI_KEY_HERE",
    "Host": "real-time-amazon-data.p.rapidapi.com",
    "BaseUrl": "https://real-time-amazon-data.p.rapidapi.com"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:4200"]
  },
  "AllowedHosts": "*"
}
